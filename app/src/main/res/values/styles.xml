<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- Terminal theme for API < 21 -->
    <style name="TerminalTheme" parent="@android:style/Theme.Black">
        <item name="android:windowBackground">@color/terminalBackground</item>
        <item name="android:colorBackground">@color/terminalBackground</item>
    </style>
</resources>
