<?xml version="1.0" encoding="utf-8"?>
<!-- Material Design 3 Input Field Background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outline border -->
    <item>
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="@color/md3_outline" />
            <corners 
                android:topLeftRadius="@dimen/md3_corner_medium"
                android:topRightRadius="@dimen/md3_corner_medium"
                android:bottomLeftRadius="@dimen/md3_corner_small"
                android:bottomRightRadius="@dimen/md3_corner_small" />
        </shape>
    </item>
    
    <!-- Filled background -->
    <item 
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/md3_surface_container_highest" />
            <corners 
                android:topLeftRadius="@dimen/md3_corner_medium"
                android:topRightRadius="@dimen/md3_corner_medium"
                android:bottomLeftRadius="@dimen/md3_corner_small"
                android:bottomRightRadius="@dimen/md3_corner_small" />
        </shape>
    </item>
</layer-list>
